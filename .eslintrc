{
    "ignorePatterns": ["views/", "node_modules/"],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "extends": ["standard"],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "indent": ["error", 4],
        "no-unused-vars": "off",
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "semi": ["error", "always"]
    },
    "plugins": [
        "@typescript-eslint",
        "chai-friendly"
    ],
    "env": {
        "node": true,
        "commonjs": true,
        "mocha": true,
        "es6": true
    }
  }