    "mocha": "7.1.1",
    "nock": "12.0.3",
    "nodemon": "2.0.3",
    "sinon": "9.0.2",
    "sinon-chai": "3.5.0",
    "sonarqube-scanner": "^2.8.1",
    "ts-node": "8.10.1",
    "typescript": "4.4.3"
