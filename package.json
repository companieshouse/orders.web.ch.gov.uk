{
  "name": "orders.web.ch.gov.uk",
  "version": "1.0.0",
  "description": "A starter web application",
  "main": "index.js",
  "scripts": {
    "start": "node dist/bin/www.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "NODE_ENV=production tsc && cp -r src/views dist/ && gulp static",
    "lint": "eslint 'src/*.ts' 'src/**/*.ts'",
    "lint:fix": "eslint 'src/*.ts' 'src/**/*.ts' --fix",
    "test": "mocha",
    "test:coverage": "nyc npm test",
    "analyse-code": "sonar-scanner",
    "chs-dev": "nodemon --legacy-watch",
    "sonarqube-base-branch": "sonar-scanner",
    "sonarqube-pull-request": "sonar-scanner -D sonar.pullrequest.base=master",
    "sonarqube": "branch=$(git rev-parse --symbolic-full-name --abbrev-ref HEAD); if [[ $branch == \"HEAD\" ]]; then echo $branch && npm run sonarqube-base-branch; else echo $branch && npm run sonarqube-pull-request; fi;"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@companieshouse/api-sdk-node": "^2.0.322",
    "@companieshouse/node-session-handler": "^5.2.8",
    "@companieshouse/structured-logging-node": "^2.0.6",
    "@companieshouse/web-security-node": "^4.4.14",
    "cookie-parser": "1.4.7",
    "escape-html": "1.0.3",
    "express": "^4.22.1",
    "express-actuator": "^1.8.4",
    "express-validator": "^7.0.1",
    "govuk-frontend": "^4.7.0",
    "http-errors": "~2.0.0",
    "ioredis": "~5.3.2",
    "js-yaml": "^4.1.0",
    "nunjucks": "^3.2.4",
    "nyc": "^15.1.0",
    "uuid": "8.0.0",
    "yargs": "~17.7.2"
  },
  "devDependencies": {
    "@types/chai": "~4.3.5",
    "@types/chai-as-promised": "~7.1.5",
    "@types/chai-http": "^4.2.4",
    "@types/cheerio": "~0.22.31",
    "@types/cookie-parser": "~1.4.3",
    "@types/express": "~4.17.17",
    "@types/http-errors": "~2.0.1",
    "@types/ioredis": "4.14.9",
    "@types/js-yaml": "^3.12.5",
    "@types/mocha": "7.0.2",
    "@types/node": "12.7.8",
    "@types/nunjucks": "3.1.2",
    "@types/proxyquire": "~1.3.28",
    "@types/sinon": "9.0.0",
    "@types/sinon-chai": "3.2.4",
    "@types/uuid": "7.0.3",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-http": "^4.4.0",
    "cheerio": "^1.0.0-rc.10",
    "eslint": "8.57.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "gulp": "4.0.2",
    "gulp-sass": "^5.1.0",
    "mocha": "^10.2.0",
    "nock": "12.0.3",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "proxyquire": "~2.1.3",
    "sass": "^1.64.2",
    "sinon": "9.0.2",
    "sinon-chai": "3.5.0",
    "sonarqube-scanner": "^3.5.0",
    "ts-node": "8.10.1",
    "typescript": "~5.1.6"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/bin/www.ts"
  },
  "overrides": {
    "chokidar": "3.5.3",
    "glob-stream": "8.0.0",
    "semver": "7.5.4",
    "simple-update-notifier": "2.0.0",
    "braces": "3.0.3",
    "path-to-regexp": "0.1.12",
    "micromatch": "4.0.8"
  }
}
