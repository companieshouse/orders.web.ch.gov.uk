    "cookie-parser": "1.4.5",
    "escape-html": "1.0.3",
    "express": "4.17.1",
    "express-validator": "^6.14.0",
    "govuk-frontend": "3.11.0",
    "http-errors": "^1.7.3",
    "ioredis": "4.16.2",
    "js-yaml": "^3.14.0",
    "nunjucks": "3.2.1",
    "uuid": "8.0.0",
    "yargs": "15.3.1"
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/chai-as-promised": "7.1.2",
